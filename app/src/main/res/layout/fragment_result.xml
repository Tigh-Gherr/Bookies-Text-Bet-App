<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light"
    tools:context="com.tommyfrenchbookmakers.officialapp.ui.ResultPagerActivity.ResultPageFragment">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/sliding_panel_selections"
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoPanelHeight="68dp"
        sothree:umanoShadowHeight="6dp">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_selections"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:scrollbars="vertical" />


        <include
            android:id="@+id/sliding_layout"
            layout="@layout/fragment_result_sliding_layout" />

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</RelativeLayout>
