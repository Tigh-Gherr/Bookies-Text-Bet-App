<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_wagerCard"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        card_view:cardBackgroundColor="@color/md_white_1000"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="16dp"
        card_view:cardElevation="2.5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_bsWagerStake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stake"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_view_bsWagerType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:text="Wager Type" />

            <TextView
                android:id="@+id/text_view_bsWagerPotentialReturns"
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Returns"
                android:textSize="12sp"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>